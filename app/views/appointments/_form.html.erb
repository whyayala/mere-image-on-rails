<div class="row">
  <div class="small-10 small-centered medium-8 medium-centered large-8 large-centered columns">
    <%= form_for @appointment do |f| %>
     
      <% if @appointment.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@appointment.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @appointment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
     
      <p>
        <%= f.label :appointment_time %><br>
        <%= f.text_field :appointment_time, :id => 'datetimepicker' %>
      </p>
     
      <p>
        <%= f.label :appointment_type %><br>
        <%= f.text_area :appointment_type %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>

<script>
  jQuery('#datetimepicker').datetimepicker({
    format:'D M Y h:m a',
    formatTime:'h:m a',
  });
</script>